\mode<presentation>

%%% Settings %%%
\setbeamercolor*{title page header}{fg=NMTblue}
\setbeamercolor*{author}{fg=black}
\setbeamercolor*{date}{fg=white}
\setbeamercolor*{item}{fg=NMTblue}

\setbeamertemplate{blocks}[rounded][shadow=false]
\setbeamercolor{note}{fg=black,bg=lightgray} 
\setbeamertemplate{caption}[numbered]
\setbeamercolor{block title}{fg = LightGray, bg = DarkSlateBlue}
\setbeamercolor{block body}{fg = black, bg = LightGray}
\setbeamercolor{block title alerted}{fg = LightGray, bg = LightSlateGrey}
\setbeamercolor{block body alerted}{fg = LightSlateGrey, bg = LightGray}
\setbeamercolor{block title example}{fg = black, bg = LightGray}
\setbeamercolor{block body example}{fg = LightGray, bg = DarkSlateBlue}


\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=red}
\setbeamercolor{structure}{fg=DarkSlateBlue}

\setbeamercolor{palette tertiary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=NMTblue}

\mode<all>