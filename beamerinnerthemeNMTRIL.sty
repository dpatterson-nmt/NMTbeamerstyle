%%% Title page %%%
\setbeamertemplate{title page}{
  \begin{textblock*}{12cm}(2.5cm,-2cm)
    \begin{beamercolorbox}[wd=8cm]{title page header}
      \insertmotto%
    \end{beamercolorbox}%
  \end{textblock*}
  \begin{textblock*}{12cm}(2.5cm,2.8cm)
    \begin{beamercolorbox}[wd=8cm]{title page header}
      \usebeamerfont{title}\usebeamercolor{title}\inserttitle%
    \end{beamercolorbox}%
  \end{textblock*}
  \begin{textblock*}{9cm}(-0.5cm,5cm)
    \begin{beamercolorbox}{date}
      \usebeamerfont{date}\insertdate%
    \end{beamercolorbox}
  \end{textblock*}
  \begin{textblock*}{9cm}(2.5cm,5cm)
    \begin{beamercolorbox}{date}
      \usebeamerfont{date}\insertinstitute%
    \end{beamercolorbox}
  \end{textblock*}
  \begin{textblock*}{9cm}(2.5cm,4cm)
    \begin{beamercolorbox}{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
  \end{textblock*}
}


